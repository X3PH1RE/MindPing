{
    "manifest_version": 3,
    "name": "Meet Assistant",
    "version": "1.0",
    "description": "A real-time AI assistant for Google Meet",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "webNavigation"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*.google.com/*",
          "https://*.zoom.us/*",
          "https://*.teams.microsoft.com/*",
          "https://*.webex.com/*",
          "https://*.gotomeeting.com/*"
        ],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
      }
  }